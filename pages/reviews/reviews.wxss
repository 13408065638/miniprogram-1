.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.review-stats {
  background: #fff;
  padding: 30rpx;
}

.rating-overview {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.rating-score {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff4444;
  margin-right: 30rpx;
}

.rating-right {
  display: flex;
  flex-direction: column;
}

.stars {
  display: flex;
  margin-bottom: 10rpx;
}

.stars image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
}

.rating-bars {
  padding: 20rpx 0;
}

.rating-bar-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.bar-label {
  font-size: 24rpx;
  color: #666;
  width: 80rpx;
}

.bar-wrap {
  flex: 1;
  display: flex;
  align-items: center;
}

.bar-bg {
  flex: 1;
  height: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.bar-fill {
  height: 100%;
  background: #ff4444;
  border-radius: 10rpx;
}

.bar-percent {
  font-size: 24rpx;
  color: #999;
  width: 60rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.tag {
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.tag.active {
  background: #ff4444;
  color: #fff;
}

.review-list {
  height: calc(100vh - 400rpx);
  padding: 20rpx;
}

.review-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.reviewer-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.reviewer-detail {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.review-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
  margin-bottom: 20rpx;
}

.review-images image {
  width: 220rpx;
  height: 220rpx;
  margin: 8rpx;
  border-radius: 8rpx;
}

.review-reply {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.reply-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.reply-content {
  font-size: 24rpx;
  color: #333;
}

.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
}

.loading-state image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.loading-state text {
  font-size: 24rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 24rpx;
  color: #999;
} 